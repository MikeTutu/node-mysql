        <div class="row">
            <div class="col-4">
                <div class="card">
                    <div class="avatar-ctn">
                        <img src="/avatar.jpg" alt="avatar" class="avatar">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            {{ user.name }}
                        </h5>
                        <p class="card-text">Some simple text build the card of your choice. Realy long I guess.</p>
                        <a href="" class="btn btn-primary">{{ user.email }}</a>
                    </div>
                </div>
            </div>

            <div class="col-8">
                <div class="card text-center">
                    <div class="card-header">
                        Profile Page
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Hey {{ user.name }}, welcome back</h5>
                        <p class="card-text">Some random text here again</p>
                        <a href="" class="btn btn-primary">Go somewhere</a>
                    </div>
                    <div class="card-footer text-muted">
                        Node MySQL - Project
                    </div>
                </div>
            </div>
        </div>
        
    </div>

